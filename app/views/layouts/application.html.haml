!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Tradeshift"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "header_includes"

  %body
    .navbar.navbar-default.navbar-fixed-top
      .navbar-inner
        .navbar-header
          %button.navbar-toggle(data-target=".nav-collapse" data-toggle="collapse")
            .sr-only Toggle Navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand(href="/")
            Tradeshift
        .collapse.navbar-collapse
          %ul.nav.navbar-nav


    .container
      .row
        #content.col-md-12
          - flash.each do |key, value|
            = content_tag(:div, value, class: "alert alert-#{key}")
          = yield



    .navbar.navbar-fixed-bottom
      .navbar-inner
        .navbar-header
          .container
            %footer
              %p &copy; Tradeshift 2015

    = yield :extra_javascripts

    :javascript
      window.App = (window.App || {});
      window.App.Current = #{render(:file => 'user/current_user.json.rabl')};

    - # Starts the app, goes last.
    = javascript_include_tag "application"

